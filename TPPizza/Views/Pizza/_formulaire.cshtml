@model PizzaVM

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Nom" class="control-label"></label>
    <input asp-for="Nom" class="form-control" />
    <span asp-validation-for="Nom" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="IdPate" class="control-label"></label>
    <select asp-for="IdPate" asp-items="Model.ChoixPate" class="form-control"></select>
    <span asp-validation-for="IdPate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="IdsIngredients" class="control-label"></label>
    <select asp-for="IdsIngredients" asp-items="Model.ChoixIngredients" class="form-control"></select>
    <span asp-validation-for="IdsIngredients" class="text-danger"></span>
</div>
